{% extends 'landing/_base.html.twig' %}

{% block content %}
    <div class="col s12">
        <h3>Новости</h3>
        {% for advert in adverts %}
            <div class="card sticky-action">
                <div class="card-image">
                    <img class="activator" src="http://lorempixel.com/800/400" alt="New item" />
                </div>
                <div class="card-content">
                    <span class="card-title activator">{{ advert.title }}<i class="material-icons right">more_vert</i></span>

                </div>
                <div class="card-action">
                    <a href="{{ path('advert', { slug: advert.slug }) }}">Подробнее</a>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{ advert.title }}<i class="material-icons right">close</i></span>
                    <p>{{ advert.intro }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}